<Window x:Class="SkinHolderDesktop.Views.Shared.RegistroDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkinHolderDesktop.Views.Shared" 
        xmlns:viewmodels="clr-namespace:SkinHolderDesktop.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:RegistroDetailsViewModel}"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="580"
        Width="1000"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Icon="https://cdn.jagoba.dev/imgs/logo.ico">

    <Window.Resources>
        <Style x:Key="SortHeaderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4A4A4A" Offset="0.0" />
            <GradientStop Color="#2C2C2C" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Style="{StaticResource RoundedPanelStyle}"
                Margin="0 0 0 15"
                Padding="25,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="FECHA DE CONSULTA" 
                               FontWeight="Bold" 
                               Foreground="Gray" 
                               FontSize="12"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding FechaRegistro}" 
                               Foreground="WhiteSmoke" 
                               FontSize="16"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="TOTAL STEAM" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource SteamBrush}" 
                               FontSize="12"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalSteamFormatted}" 
                               Foreground="{StaticResource SteamBrush}" 
                               FontSize="18" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="TOTAL GAMERPAY" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource GamerPayBrush}" 
                               FontSize="12"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalGamerPayFormatted}" 
                               Foreground="{StaticResource GamerPayBrush}" 
                               FontSize="18" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="TOTAL CSFLOAT" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource CSFloatBrushSecondary}" 
                               FontSize="12"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalCSFloatFormatted}" 
                               Foreground="{StaticResource CSFloatBrushSecondary}" 
                               FontSize="18" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" 
                Style="{StaticResource RoundedPanelStyle}"
                Margin="0"
                Padding="0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        Background="#1A1A1A" 
                        CornerRadius="10,10,0,0"
                        Padding="20,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="130"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" 
                                Style="{StaticResource SortHeaderButtonStyle}"
                                Command="{Binding SortByNombreCommand}"
                                HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ARTÍCULO" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding NombreSortIndicator}" 
                                           Foreground="{StaticResource PrimaryBrush}"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="1" 
                                Style="{StaticResource SortHeaderButtonStyle}"
                                Command="{Binding SortByCantidadCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="CANTIDAD" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding CantidadSortIndicator}" 
                                           Foreground="{StaticResource PrimaryBrush}"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="2" 
                                Style="{StaticResource SortHeaderButtonStyle}"
                                Command="{Binding SortBySteamCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="STEAM" 
                                           Foreground="{StaticResource SteamBrush}" 
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding SteamSortIndicator}" 
                                           Foreground="{StaticResource PrimaryBrush}"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="3" 
                                Style="{StaticResource SortHeaderButtonStyle}"
                                Command="{Binding SortByGamerPayCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="GAMERPAY" 
                                           Foreground="{StaticResource GamerPayBrush}" 
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding GamerPaySortIndicator}" 
                                           Foreground="{StaticResource PrimaryBrush}"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="4" 
                                Style="{StaticResource SortHeaderButtonStyle}"
                                Command="{Binding SortByCSFloatCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="CSFLOAT" 
                                           Foreground="{StaticResource CSFloatBrushSecondary}" 
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding CsFloatSortIndicator}" 
                                           Foreground="{StaticResource PrimaryBrush}"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Hidden" 
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="20 5 20 20">
                    <ItemsControl ItemsSource="{Binding ItemsDetalle}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent" 
                                        Margin="0,3" 
                                        Padding="0,8" 
                                        CornerRadius="5">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2A2A2A"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="130"/>
                                            <ColumnDefinition Width="130"/>
                                            <ColumnDefinition Width="130"/>
                                            <ColumnDefinition Width="130"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding ItemName}" 
                                                   Foreground="WhiteSmoke" 
                                                   FontSize="14" 
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding ItemName}"/>

                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Cantidad}" 
                                                   Foreground="{StaticResource PrimaryBrush}" 
                                                   FontWeight="Bold" 
                                                   FontSize="14" 
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding PrecioSteamFormatted}" 
                                                   Foreground="{StaticResource SteamBrush}" 
                                                   FontSize="13" 
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   ToolTip="{Binding TotalSteamFormatted}"/>

                                        <TextBlock Grid.Column="3" 
                                                   Text="{Binding PrecioGamerPayFormatted}" 
                                                   Foreground="{StaticResource GamerPayBrush}" 
                                                   FontSize="13" 
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   ToolTip="{Binding TotalGamerPayFormatted}"/>

                                        <TextBlock Grid.Column="4" 
                                                   Text="{Binding PrecioCSFloatFormatted}" 
                                                   Foreground="{StaticResource CSFloatBrushSecondary}" 
                                                   FontSize="13" 
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   ToolTip="{Binding TotalCSFloatFormatted}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>