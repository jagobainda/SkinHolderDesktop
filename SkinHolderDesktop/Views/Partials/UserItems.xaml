<UserControl x:Class="SkinHolderDesktop.Views.Partials.UserItems"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:SkinHolderDesktop.Views.Partials" 
             xmlns:viewmodels="clr-namespace:SkinHolderDesktop.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:UserItemsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="511" 
             d:DesignWidth="834">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource RoundedPanelStyle}" Margin="30">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.4*"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource TitleTextBlockStyle}" Foreground="WhiteSmoke" FontSize="20">
                    <Run Text="TUS ITEMS" />
                </TextBlock>

            </Grid>
        </Border>

        <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource RoundedPanelStyle}" Margin="30 30 30 0">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.55*"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource TitleTextBlockStyle}" Foreground="WhiteSmoke" FontSize="20">
                    <Run Text="NUEVO ITEM" />
                </TextBlock>
            </Grid>
        </Border>

        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" Margin="30">
            <TextBox Width="150" Height="55" Margin="5"
                     
                     MaxLength="9"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     Style="{StaticResource TextBoxStyleMenu}">
                <TextBox.ToolTip>
                    <ToolTip Content="Solo números enteros"/>
                </TextBox.ToolTip>
            </TextBox>
            <Button Style="{StaticResource ButtonStyleWithBorderRadius}" Margin="5">
                <TextBlock Style="{StaticResource TitleTextBlockStyle}" Padding="30 0">
                    <Run Text="AÑADIR ITEM" Foreground="{StaticResource PrimaryBrush}" FontSize="18" />
                </TextBlock>
            </Button>
        </StackPanel>

    </Grid>
</UserControl>
